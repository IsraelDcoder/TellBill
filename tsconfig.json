{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./client/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "server_dist",
    "**/*.test.ts",
    ".expo"
  ]
}
